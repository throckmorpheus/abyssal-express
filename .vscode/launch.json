{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Godot Launch C# Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/.godot_install/Godot.exe",
            "cwd": "${workspaceFolder}/.godot_install",
            "console": "internalConsole",
            "stopAtEntry": false,
            "args": ["--path","${workspaceRoot}"]
        },
        {
            "name": "Godot Launch GDScript Debug",
            "type": "godot",
            "request": "launch",
            "project": "",
            "debug_collisions": false,
            "debug_paths": false,
            "debug_navigation": false,
            "additional_options": ""
        },  
    ]
}